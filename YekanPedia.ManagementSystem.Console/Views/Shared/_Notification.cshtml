@{
    var Model = Html.NotificationController().Current;
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <script type="text/javascript">
                $().ready(function () {
                    setTimeout(function () {
                        swal({
                            title: "@LocalMessage.Error",
                            text: "@item.Message",
                            type: "@item.NotificationStatus.GetDescription()",
                            showCancelButton: false,
                            confirmButtonColor: "#4285F4",
                            confirmButtonText: "بلی",
                            closeOnConfirm: false,
                        });
                    }, 300);
                });
            </script>
        }
    }
}


