@model Setting
<div id="profile-main">
    @{ Html.RenderAction(MVC.NotificationSetting.AllNotificationSetting());}
    <div class="row">
        <div class="col-sm-12">
            <div class="card ">
                <div class="card-body">
                    <div class="pmb-block m-b-10" id="setting">
                        <div class="pmbb-header m-b-20">
                            <h5 class="p-r-10">
                                <i class="zmdi zmdi-account m-l-5"></i>
                                @LocalMessage.Setting
                            </h5>
                            <ul class="actions">
                                <li class="dropdown">
                                    <a href="" data-toggle="dropdown" aria-expanded="false">
                                        <i class="zmdi zmdi-more-vert"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-left">
                                        <li>
                                            <a data-pmb-action="edit" href="">@LocalMessage.Edit</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="pmbb-body p-l-30 p-b-25">
                            <div class="pmbb-view">
                                <dl class="dl-horizontal">
                                    <dt>@Html.DisplayNameFor(X => X.BirthDateText)</dt>
                                    <dd id="BirthDateText_View" class="text-left">@Model.BirthDateText</dd>
                                </dl>
                                <dl class="dl-horizontal">
                                    <dt>@Html.DisplayNameFor(X => X.FilesPersistance)</dt>
                                    <dd id="FilesPersistance_View">@Model.FilesPersistance</dd>
                                </dl>
                            </div>
                            <div class="pmbb-edit">
                                @using (Ajax.BeginForm(MVC.Setting.ActionNames.Edit, MVC.Setting.Name, null, new AjaxOptions()
                                {
                                    HttpMethod = "POST",
                                    OnComplete = "onEditSettingComplete"
                                }, new { }))
                                {
                            @Html.HiddenFor(X => X.SettingId, new { @Value = Model.SettingId })
                            <div class="input-group has-feedback m-b-20">
                                <div class="fg-line">
                                    @Html.TextAreaFor(X => X.BirthDateText, new { @rows = 5, @autocomplete = "off", @placeholder = @Html.DisplayNameFor(X => X.BirthDateText), @class = "form-control " })
                                </div>
                                <small class="help-block">
                                    @Html.ValidationMessageFor(X => X.BirthDateText)
                                </small>
                                <span class="zmdi form-control-feedback"></span>
                            </div>
                            <div class="input-group has-feedback m-b-20">
                                <div class="fg-line">
                                    @Html.TextBoxFor(X => X.FilesPersistance, new { @data_type = "nu", @autocomplete = "off", @placeholder = @Html.DisplayNameFor(X => X.FilesPersistance), @class = "form-control" })
                                </div>
                                <small class="help-block">
                                    @Html.ValidationMessageFor(X => X.FilesPersistance)
                                </small>
                                <span class="zmdi form-control-feedback"></span>
                            </div>
                            <div class=" text-left">
                                <button id="saveBasicInfoForm" class="btn btn-primary btn-sm waves-effect">
                                    <i class="zmdi zmdi-check"></i>
                                    @LocalMessage.Save
                                </button>
                                <button data-pmb-action="reset" class="btn btn-danger btn-sm waves-effect">
                                    <i class="zmdi zmdi-arrow-forward"></i>
                                    @LocalMessage.Cancel
                                </button>
                            </div>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="@Url.Content(Links.Scripts.Application.NotificationSettingController_js)"></script>
<script src="@Url.Content(Links.Scripts.Application.SettingController_min_js)"></script>
}
