@model YekanPedia.ManagementSystem.Domain.Entity.Class
@{ Layout = null;}
<div class="row">
    <div class="col-sm-3 m-b-20">
        <p class="f-500 m-b-10 c-black">
            @Html.DisplayNameFor(X => X.UserId)
        </p>
        @Html.DropDownListFor(X => X.UserId, (IEnumerable<SelectListItem>)ViewBag.Teachers, new { @class = "selectpicker bs-select-hidden" })
    </div>
    <div class="col-sm-3 m-b-20">
        <p class="f-500 m-b-10 c-black">
            @Html.DisplayNameFor(X => X.ClassTypeId)
        </p>
        @Html.DropDownListFor(X => X.ClassTypeId, (IEnumerable<SelectListItem>)ViewBag.ClassTypes, new { @class = "selectpicker bs-select-hidden" })
    </div>
    <div class="col-sm-3 m-b-20">
        <p class="f-500 m-b-10 c-black">
            @Html.DisplayNameFor(X => X.CourseId)
        </p>
        @Html.DropDownListFor(X => X.CourseId, (IEnumerable<SelectListItem>)ViewBag.Courses, new { @class = "selectpicker bs-select-hidden " })
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.Capacity)</label>
                @Html.TextBoxFor(X => X.Capacity, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.Capacity)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.SessionCount)</label>
                @Html.TextBoxFor(X => X.SessionCount, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.SessionCount)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.Price)</label>
                @Html.TextBoxFor(X => X.Price, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.Price)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label>@Html.DisplayNameFor(X => X.StartDateSh)</label>
            <div class="fg-line">
                @Html.TextBoxFor(X => X.StartDateSh, new { @data_mask = "0000/00/00", @class = "form-control PersianCalendar" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.StartDateSh)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label>@Html.DisplayNameFor(X => X.FinishDateSh)</label>
            <div class="fg-line">
                @Html.TextBoxFor(X => X.FinishDateSh, new { @data_mask = "0000/00/00", @class = "form-control PersianCalendar" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.FinishDateSh)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-3 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label>@Html.DisplayNameFor(X => X.JustificationDateSh)</label>
            <div class="fg-line">
                @Html.TextBoxFor(X => X.JustificationDateSh, new { @data_mask = "0000/00/00", @class = "form-control PersianCalendar" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.JustificationDateSh)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>

    <div class="col-sm-6 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label for="eventName">@Html.DisplayNameFor(X => X.Color)</label>
            @Html.HiddenFor(X => X.Color, new { @Value = "#00bcd4" })
            <div class="event-tag">
                <span data-tag="bgm-teal" data-color="#009688" class="bgm-teal"></span>
                <span data-tag="bgm-red" data-color="#f44336" class="bgm-red"></span>
                <span data-tag="bgm-pink" data-color="#e91e63" class="bgm-pink"></span>
                <span data-tag="bgm-blue" data-color="#2196f3" class="bgm-blue"></span>
                <span data-tag="bgm-lime" data-color="#cddc39" class="bgm-lime"></span>
                <span data-tag="bgm-green" data-color="#4caf50" class="bgm-green"></span>
                <span data-tag="bgm-cyan" data-color="#00bcd4" class="bgm-cyan selected"></span>
                <span data-tag="bgm-orange" data-color="#ff9800" class="bgm-orange"></span>
                <span data-tag="bgm-purple" data-color="#9c27b0" class="bgm-purple"></span>
                <span data-tag="bgm-gray" data-color="#9e9e9e" class="bgm-gray"></span>
            </div>
        </div>
    </div>

</div>
