@model Class

@using YekanPedia.ManagementSystem.Domain.Entity
<div class="block-header">
    <h2>@LocalMessage.ClassManagement</h2>
</div>
<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body card-padding">
        @using (Html.BeginForm(MVC.Class.ActionNames.Add, MVC.Class.Name, FormMethod.Post, new { @id = "AddClassFrm" }))
            {
                Html.RenderPartial(MVC.Class.Views.Partial._CreateClass, Model);
            }
    </div>
</div>
@{ Html.RenderAction(MVC.Class.ActionNames.ClassList, MVC.Class.Name);}

@section Scripts{
    <script src="@Url.Content(Links.Scripts.Application.ClassController_js)"></script>
}