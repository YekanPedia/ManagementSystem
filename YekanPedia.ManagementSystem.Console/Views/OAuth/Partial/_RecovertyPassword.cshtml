@{
    Layout = null;
}

<div class="lc-block" id="l-forget-password">
    <img class="lcb-user" width="100" height="100" src="@Url.Content(Links.Content.Images.Logo.Logo_png)" alt="@LocalMessage.YekanPedia">
    <div class="input-group m-b-20">
    </div>
    @using (Ajax.BeginForm(MVC.Account.ActionNames.RecoveryPassword, MVC.Account.Name, null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnComplete = "onRecoveryPasswordComplete"
    }, new { @id = "recoveryPasswordFrm" }))
    {
        <p class="text-right">
            @LocalMessage.RecoveryPasswordDescription
        </p>

        <div id="recoveryPassword" class="input-group has-feedback m-b-20">
            <span class="input-group-addon">
                <i class="zmdi zmdi-lock"></i>
            </span>
            <div class="fg-line">
                <input type="text" name="email" id="email" class="form-control" placeholder="@LocalMessage.Email">
            </div>
            <small class="help-block" id="recoveryPasswordError">

            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
        <button type="submit" class="btn btn-login btn-danger btn-float">
            <i class="zmdi zmdi-arrow-left">
            </i>
        </button>
    }
    <ul class="login-navigation">
        <li data-block="#l-login" class="bgm-nily">@LocalMessage.SignIn</li>
        <li data-block="#l-register" class="bgm-red">@LocalMessage.Register</li>
    </ul>
</div>
