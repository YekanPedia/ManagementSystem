@model YearEvents
    <div class="block-header">
        <h2>@LocalMessage.YearEventsManagement</h2>
    </div>
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body card-padding">
            @using (Html.BeginForm(MVC.YearEvents.ActionNames.Add, MVC.YearEvents.Name, FormMethod.Post, new { @id = "AddYearEventsFrm" }))
            {
                Html.RenderPartial(MVC.YearEvents.Views.Partial._CreateYearEvents, Model);
                <div class="row">
                    <div class="m-l-20  m-t-30 text-left">
                        <button type="submit" id="saveClassForm" class="btn btn-primary btn-sm waves-effect">
                            <i class="zmdi zmdi-check"></i>
                            @LocalMessage.Save
                        </button>
                        <a href="@Url.Action(MVC.Dashboard.ActionNames.User,MVC.Dashboard.Name)" class="btn btn-danger btn-sm waves-effect">
                            <i class="zmdi zmdi-arrow-forward"></i>
                            @LocalMessage.Cancel
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    @{
        Html.RenderAction(MVC.YearEvents.YearEventsList());
    }

@section Scripts{
    <script src="@Url.Content(Links.Scripts.Application.YearEventsController_min_js)"></script>
}
