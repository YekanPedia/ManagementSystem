
<div class="row">
    @{ Html.RenderAction(MVC.Dashboard.UserStatistics());}
    <div class="col-sm-6">
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-5">
                        @LocalMessage.ExpiredClass
                    </div>
                </div>
                <div class="lv-body">
                    @{ Html.RenderAction(MVC.Class.ClassExpired());}
                </div>
            </div>
        </div>
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-5">
                        @LocalMessage.ExpiredUser
                    </div>
                </div>
                <div class="lv-body">
                    @{ Html.RenderAction(MVC.UserInClass.UserExpired());}
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-6">
        <div class="card rating-list">
            <div class="listview">
                <div class="lv-header">
                    <div class="m-t-5">
                        @LocalMessage.Statistics
                    </div>
                </div>
                <div class="lv-body">
                    <div class="p-15">
                        @{ Html.RenderAction(MVC.Dashboard.DirectorySize());}
                        @{ Html.RenderAction(MVC.Dashboard.SmsSize());}
                    </div>
                </div>
            </div>
        </div>
        @{ Html.RenderAction(MVC.Task.GetAllTasksWidget());}
    </div>
    <div class="col-sm-12">
        @{ Html.RenderAction(MVC.Scheduler.GetList());}
    </div>
</div>

@section Scripts{
    @Scripts.Render(Links.Bundles.Scripts.AdminPanelScripts)
    <script>
        $().ready(function () {
            if ($('.sub-pie-1')[0]) {
                easyPieChart('sub-pie-1', '#eee', '#ccc', '#2196F3', 2, 'butt', 50);
            }
        });
    </script>
}