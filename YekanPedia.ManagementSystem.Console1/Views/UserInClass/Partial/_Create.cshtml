@model UserInClass

@{ Layout = null;}
@Html.HiddenFor(X => X.UserId)
<div class="row">
    <div class="col-sm-8 m-b-20">
        <p class="f-500 m-b-10 c-black">
            @Html.DisplayNameFor(X => X.ClassId)
        </p>
        @Html.DropDownListFor(X => X.ClassId, (IEnumerable<SelectListItem>)ViewBag.Class, new { @class = "selectpicker bs-select-hidden" })
    </div>
    <div class="col-sm-4 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label>@Html.DisplayNameFor(X => X.ContributeStartDateSh)</label>
            <div class="fg-line">
                @Html.TextBoxFor(X => X.ContributeStartDateSh, new { @data_mask = "0000/00/00", @class = "form-control PersianCalendar" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.ContributeStartDateSh)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-4 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <label>@Html.DisplayNameFor(X => X.PaymentDate)</label>
            <div class="fg-line">
                @Html.TextBoxFor(X => X.PaymentDate, new { @data_mask = "0000/00/00", @class = "form-control PersianCalendar" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.PaymentDate)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-4 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.Price)</label>
                @Html.TextBoxFor(X => X.Price, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.Price)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-4 m-b-20">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.TransactionCode)</label>
                @Html.TextBoxFor(X => X.TransactionCode, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.TransactionCode)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
    <div class="col-sm-4 ">
        <div class="input-group has-feedback m-b-20">
            <div class="fg-line">
                <label>@Html.DisplayNameFor(X => X.SessionCount)</label>
                @Html.TextBoxFor(X => X.SessionCount, new { @data_type = "nu", @class = "form-control" })
            </div>
            <small class="help-block">
                @Html.ValidationMessageFor(X => X.SessionCount)
            </small>
            <span class="zmdi form-control-feedback"></span>
        </div>
    </div>
</div>
